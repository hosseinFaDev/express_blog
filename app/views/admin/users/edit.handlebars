<div class="row justify-content-between align-items-center mb-10">
    <!-- Page Heading Start -->
    <div class="col-12 col-lg-auto mb-20">
        <div class="page-heading">
             <h3 class="title">کاربر <span>/ درج کاربر جدید</span></h3>
        </div>
    </div>
    <!-- Page Heading End -->

    <!-- Page Button Group End -->
</div>
<!-- Page Headings End -->

<div class="row mbn-30">
    <!-- Revenue Statistics Chart Start -->
    <div class="col-md-12 mb-30">
        <div class="box">
            <div class="box-head">
                <div class="row">
                    <h4 class="title">اطلاعات کاربر</h4>
                </div>
            </div>
            <div class="box-body">
                <form action="/admin/users/update/{{user.id}}" method="POST">
                    <div class="row mbn-20">
                        {{#if hasError}}
                        <div class="alert alert-outline-secondary" role="alert">
                            {{#each errors}}
                            <p>{{this}}</p>
                            {{/each}}
                        </div>

                        {{/if}}
                        
                        <div class="col-12 mb-20">
                            <input name="full_name" type="text" id="formLayoutUsername3" class="form-control"
                               value="{{user.full_name}}" placeholder="نام کامل کاربر" />
                        </div>
                        <div class="col-12 mb-20">
                            <input name="email" type="email" id="formLayoutEmail3" class="form-control"
                               value="{{user.email}}" placeholder="ایمیل کاربر" />
                        </div>
                        <div class="col-12 mb-20">
                            <input name="password" type="password" id="formLayoutEmail3" class="form-control"
                               value="{{user.password}}" placeholder="کلمه عبور" />
                        </div>


                        <div class="col-12 mb-20">
                            <h6 class="mb-15">وضعیت کاربر</h6>
                            <div class="form-group">
                                <label class="inline"><input name="role" type="radio" value="{{userRole.USER}}" {{#isSelectedRole userRole.USER}} checked {{/isSelectedRole}} />کاربری</label>
                                <label class="inline"><input name="role" type="radio" value="{{userRole.WRITER}}" {{#isSelectedRole userRole.WRITER}} checked {{/isSelectedRole}}/>نویسنده</label>
                                <label class="inline"><input name="role" type="radio" value="{{userRole.ADMIN}}" {{#isSelectedRole userRole.ADMIN}} checked {{/isSelectedRole}}/>مدیر</label>
                            </div>
                        </div>

                        <div class="col-12 mb-20">
                            <input type="submit" value="ذخیره سازی" class="button button-primary" />
                        </div>
                       
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Revenue Statistics Chart End -->
</div>