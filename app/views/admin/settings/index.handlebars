<!-- Page Headings Start -->
<div class="row justify-content-between align-items-center mb-10">
    <!-- Page Heading Start -->
    <div class="col-12 col-lg-auto mb-20">
        <div class="page-heading">
            <h3 class="title">تنظیمات</h3>
        </div>
    </div>
    <!-- Page Heading End -->

    <!-- Page Button Group End -->
</div>
<!-- Page Headings End -->

<div class="row mbn-30">
    <!-- Revenue Statistics Chart Start -->
    <div class="col-md-12 mb-30">
        <div class="box">
            <div class="box-head">
                <div class="row">
                    <h4 class="title">تنظیمات بلاگ</h4>
                </div>
            </div>
            <div class="box-body">
                <form action="/admin/settings" method="post">
                    <div class="row mbn-20">
                        <div class="col-12 mb-20">
                            <div class="row mbn-20">
                                <div class="col-lg-6 mb-20">
                                    <label for="formLayoutCity1">عمومی</label>
                                    <input type="text" name="website_title" id="formLayoutCity1" class="form-control"
                                      value="{{config.website_title}}"  placeholder="عنوان وبسایت" />
                                </div>

                                <div class="col-lg-6 mb-20">
                                    <label for="formLayoutZip1">محتوا</label>
                                    <input value="{{config.post_per_page}}" name="post_per_page" type="text" id="formLayoutZip1" class="form-control" placeholder="10" />
                                </div>
                            </div>
                        </div>

                        <div class="col-12 mb-20">
                            <textarea id="formLayoutMessage1" name="website_description" class="form-control" placeholder="توضیحات وبسایت"
                                rows="3">{{config.website_description}}</textarea>
                        </div>

                        <div class="col-12 mb-20">
                            <h6 class="mb-15">سایر تنظیمات</h6>

                            <div class="adomx-checkbox-radio-group">
                                <label class="adomx-checkbox primary"><input type="checkbox" {{#isChecked config.users_can_register}} checked {{/isChecked}} name="users_can_register" /> <i
                                        class="icon"></i> هر کس می تواند ثبت نام کند</label>
                                <label class="adomx-checkbox primary"><input type="checkbox" {{#isChecked config.users_can_submit_comment}} checked {{/isChecked}} name="users_can_submit_comment" /> <i
                                        class="icon"></i> کاربران می توانند دیدگاه‌ ثبت کنند</label>
                            </div>
                        </div>

                        <div class="col-12 mb-20">
                            <input type="submit" value="ذخیره سازی" class="button button-primary" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Revenue Statistics Chart End -->
</div>